@model IEnumerable<AptechRecord.Models.usp_select_customized_attendance_Result>

@{
    ViewBag.Title = "Customized";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section contentHeader{
    <h1>
        Customized Attendance Report
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Attendances", new {id = @ViewBag.Timing})><i class="fa fa-list"></i>Attendance</a></li>
        <li>Customized Attendance</li>
    </ol>
}
@if (ViewBag.ErrorMessage != null)
{
    <p class="danger alert-danger text-danger">@ViewBag.ErrorMessage</p>
}
else
{


    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Customized", "Attendances", FormMethod.Post, new { id = "CustomizedForm" }))
                    {
                        <div class="form-group">
                            @Html.Label("Select Date", "Select Date", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                <b>From</b> @Html.TextBox("FromCDate", null, new { @class = "form-control" })
                            </div>
                            <div class="col-md-5">
                                <b>To</b>@Html.TextBox("ToCDate", null, new { @class = "form-control" })
                            </div>
                            <br />
                            @Html.TextBox("Get Record", "Get Record", new { @class = "btn btn-info", type = "submit" })

                            @if (ViewBag.Mesg != null)
                            {
                                <p class="text-danger"> @ViewBag.Mesg</p>
                            }
                        </div>
                    }
                </div>
                <hr />
                <div class="box-body">
                    <table id="CustomizedAttendancetable" class="table">
                        <thead>
                            <tr>
                                <th>
                                    Student Id
                                </th>
                                <th>
                                    Student Name
                                </th>
                                <th>
                                    Attendance Date
                                </th>
                                <th>
                                    Attendance Status
                                </th>
                                <th>
                                    Notes
                                </th>
                                <th>
                                    Attendance Mark By
                                </th>
                                <th>
                                    Batch Code
                                </th>
                                <th>
                                    Slot
                                </th>
                                <th>
                                    Days
                                </th>
                                <th>
                                    Contact No.
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Address
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AttendanceDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AttenddanceStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ANotes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SBBatchCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Slot)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchDays)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact1) / @Html.DisplayFor(modelItem => item.Contact2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
}
