@model IEnumerable<AptechRecord.Models.usp_select_date_wise_batch_detail_Result>

@{
    ViewBag.Title = "ViewBatchAttendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section contentHeader{
    <h1>
        Attendance
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Attendances")><i class="fa fa-list"></i>Attendance</a></li>
        <li>Date Wise Attendance Batch Details</li>
    </ol>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Date Wise Attendance Batch Details</h3>
            </div>
            <div class="box-body">
                <h3>
                    Batch Code : @ViewBag.BatchCode
                    <br/>
                    @ViewBag.ShowDate
                </h3>
                <br />
                <table id="DateWiseAttendanceBatchDetailstable" class="table">
                    <thead>
                        <tr>
                            <th>
                                Student Id
                            </th>
                            <th>
                                Student Name
                            </th>
                            <th>
                                Attendance Date
                            </th>
                            <th>
                                Attendance Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttendanceDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttenddanceStatus)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
