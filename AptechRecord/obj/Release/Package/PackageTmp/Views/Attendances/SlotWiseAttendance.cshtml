@model IEnumerable<AptechRecord.Models.Attendance>

@{
    ViewBag.Title = "Slot Wise Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section contentHeader{
    <h1>
        Slot Wise Attendance
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Attendance")><i class="fa fa-list"></i>Attendance</a></li>
        <li>Slot Wise Attendance</li>
    </ol>
}

@using (Html.BeginForm())
{
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title text-capitalized">@ViewBag.Title</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-3 col-sm-offset-1">
                    <h5>Select Slot</h5>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("SlotDropDown", null, new { @class = "form-control" })
                    <br /><br />

                    <input type="submit" name="SlotBatch" value="Get Batches" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}

