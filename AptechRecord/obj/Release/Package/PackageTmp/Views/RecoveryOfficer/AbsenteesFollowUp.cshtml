@model IEnumerable<AptechRecord.Models.usp_select_absentees_followup_Result>

@{
    ViewBag.Title = "AbsenteesFollowUp";
    Layout = "~/Views/Shared/_LayoutPageRO.cshtml";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <h6>@ViewBag.ErrorMessage</h6>
    </div>
}
else
{
    <div class="box box-info">
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>Absentees FollowUp</h4>
                    <div class="row">
                        <div class="col-md-5 col-md-offset-2">
                            @using (Html.BeginForm("AbsenteesFollowUp", "RecoveryOfficer", FormMethod.Post, new { id = "AbsenteesFollowUpForm" }))
                            {
                                <div class="form-group">
                                    @Html.Label("Select Date", "Select Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBox("AbsenteesDate", null, new { @class = "form-control" })
                                        <br />
                                        @Html.TextBox("Get Students", "Get Students", new { @class = "btn btn-info", type = "submit" })

                                        @if (ViewBag.Mesg != null)
                                        {
                                            <p class="text-danger"> @ViewBag.Mesg</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12 col-md-11">
                    <table id="AbsenteesFollowUp" class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StudentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FatherName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BatchCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contact1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contact2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FatherName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
