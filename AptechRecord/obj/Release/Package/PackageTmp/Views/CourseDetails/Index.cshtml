@model IEnumerable<AptechRecord.Models.CourseDetail>

@{
    ViewBag.Title = "Courses Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentHeader{
    <h1>
        Courses Detail List
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Courses  Detail</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <p>
                    @Html.ActionLink("Add New Course Details", "AddCourseDetails", null, new { @class = "btn btn-danger" })
                </p>
                <table id="CourseDetailTable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Cours.CourseName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CourseDetailName)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cours.CourseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseDetailName)
                                </td>
                                <td>
                                    <a href=@Url.Action("EditCourseDetails", new { id = item.CourseDetail1 })><i class="fa fa-edit"></i></a>
                                    <a href=@Url.Action("DeleteCourse", new { id = item.CourseDetail1 })><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
