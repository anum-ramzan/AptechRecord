@model IEnumerable<AptechRecord.Models.StudentBatch>

@{
    ViewBag.Title = "Student Batch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section contentHeader{
    <h1>
        Student
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Student Batch</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <p>
                    @Html.ActionLink("Assgin batch to student", "AssignBatch", null, new { @class = "btn btn-danger" })
                </p>
                <table id="StudentBatchtable" class="table">
                    <thead>
                        <tr>
                            <th>Student Id</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Student.StudentName)
                            </th>
                            <th>
                                Batch Code
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Notes)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StudentId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.StudentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    <a href=@Url.Action("ChangeBatch", new { id = item.Id })><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
