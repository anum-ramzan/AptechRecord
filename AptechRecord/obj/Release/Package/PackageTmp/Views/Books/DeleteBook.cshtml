@model AptechRecord.Models.Book

@{
    ViewBag.Title = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section contentHeader{
    <h1>
        Book
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Books")><i class="fa fa-list"></i>Semester Books</a></li>
        <li>Delete book</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Book</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.BookName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.BookName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Semester.SemesterName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Semester.SemesterName)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete Book" class="btn btn-danger" />
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>