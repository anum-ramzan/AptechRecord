@model IEnumerable<AptechRecord.Models.Book>

@{
    ViewBag.Title = "Semester Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section contentHeader{
    <h1>
        Semester Books List
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Semester Books</li>
    </ol>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">

                @if (TempData["NoIdFound"] != null)
                {
                    <p class="alert alert-danger  text-danger" role="alert">@TempData["NoIdFound"]</p>
                }
                <p>
                    @Html.ActionLink("Add Book", "AddBook", null, new { @class = "btn btn-danger" })
                </p>
                <table id="Booktable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BookName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Semester.SemesterName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Semester.SemesterName)
                                </td>
                                <td>
                                    <a href=@Url.Action("EditBook", new { id = item.Id })><i class="fa fa-edit"></i></a>
                                    <a href=@Url.Action("DeleteBook", new { id = item.Id })><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>setTimeout(function () { $('.alert.alert-danger.text-danger').fadeOut(); }, 3000)</script>