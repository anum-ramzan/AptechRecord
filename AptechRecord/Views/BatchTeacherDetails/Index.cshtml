@model IEnumerable<AptechRecord.Models.BatchTeacherDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section contentHeader{
    <h1>
        Batches
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Batches</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                @if (TempData["NoIdFound"] != null)
                {
                    <p class="alert alert-danger text-danger" role="alert">@TempData["NoIdFound"]</p>
                }
                <p>
                    @Html.ActionLink("Assign Teacher", "ChangeTeacher", null, new { @class = "btn btn-danger"})
                </p>
                <table id="BatchTeacherDetailstable" class="table">
                    <thead>
                        <tr>
                            <th>
                                Batch Code
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee.EmployeeName)
                            </th>
                            <th>
                               Status
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Notes)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BatchCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeacherStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Notes)
                            </td>
                            <td>
                                <a href=@Url.Action("Edit", new { id = item.Id })><i class="fa fa-edit"></i></a>
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

