@model List<AptechRecord.Models.usp_select_attendance_student_Result>

@using AptechRecord.Models;

@{
    ViewBag.Title = "Attendance";
    Layout = "~/Views/Shared/_LayoutPageRO.cshtml";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <h6>@ViewBag.ErrorMessage</h6>
    </div>
}
else
{
    using (Html.BeginForm("Attendance", "RecoveryOfficer", new { batch = ViewBag.BatchName }, FormMethod.Post))
    {
        <div class="box box-info">
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4">
                        <h3>Batch Code: @ViewBag.BatchName</h3>
                        <p>Attendance for: @DateTime.Now.AddHours(9.00000).ToString("D")</p>
                        <p>Total Students: @ViewBag.CountStudent</p>
                        <p>Marking attendance on:  @DateTime.Now.AddHours(9.00000)</p>
                    </div>
                    <div class="col-sm-3 text-right">
                        <button type="button" id="DropOutButton" class="btn bg-navy" data-toggle="modal" data-target="#DropOutModal" style="margin-top: 50px; width: 150px; height: 50px; margin-right:-3px;">Dropout Students</button>
                        <br />
                        @*<button type="button" id="BatchTransferButton" class="btn bg-navy" data-toggle="modal" data-target="#BatchTransferModal" style="margin-top: 10px; width: 150px; height: 50px;">Batch Transfer</button>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div id="StudentAttendanceTable" class="table">
                            <div class="div-header">
                                <div class="row">
                                    <div class="col-sm-2">
                                        Student Id
                                    </div>
                                    <div class="col-sm-3">
                                        Student Name
                                    </div>
                                    <div class="col-sm-3">
                                        Attendance Status
                                    </div>
                                    <div class="col-sm-4">Notes</div>
                                </div>
                            </div>
                            <div class="div-body">
                                @if (Model != null && Model.Count > 0)
                                {
                                    int count = 0;
                                    foreach (var item in Model)
                                    {
                                        <div class="row">
                                            <div class="col-sm-2">
                                                @Html.TextBoxFor(modelItem => modelItem[count].StudentId, new { @class = "", style = "border: none;", @readonly = "readonly" })
                                            </div>
                                            <div class="col-sm-3">
                                                @Html.DisplayFor(modelItem => item.StudentName)
                                            </div>
                                            <div class="col-sm-3">
                                                <label>
                                                    @Html.RadioButtonFor(modelItem => modelItem[count].AttendanceStatus, "Present", new { @class = "" })
                                                    Present
                                                </label>
                                                <label>
                                                    @Html.RadioButtonFor(modelItem => modelItem[count].AttendanceStatus, "Absent", new { @class = "" })
                                                    Absent
                                                </label>
                                                @*@Html.CheckBoxFor(modelItem => modelItem[count].AttendanceStatus, new { @class = "check-box" })*@
                                            </div>
                                            <div class="col-sm-4">
                                                @{ var a = "Notes" + count;  }
                                                @Html.TextAreaFor(modelItem => modelItem[count].Notes, new { @class = "form-control", id = @a })
                                            </div>
                                        </div><hr class="body-hr" />
                                                 count++;
                                    }
                                }
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-8 col-sm-offset-2">
                                    <input type="submit" id="MarkAttendance" name="MarkAttendance" value="Mark Attendance" class="btn btn-block btn-success" />
                                    @Html.ActionLink("Cancel", "Dashboard", "RecoveryOfficer", null, new { @class = "btn btn-block btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="modal fade" id="modalDefault" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"> Students Attendance</h3>
            </div>
            <div class="modal-body attendance-model-body">
                <p id="message"></p>
            </div>
            <div class="modal-footer text-center">
                <button type="button" id="CloseModal" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- Drop Out Modal -->
<div id="DropOutModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Drop Out</h4>
            </div>
            @using (Html.BeginForm("DropOutStudent", "RecoveryOfficer", FormMethod.Post))
            {
                <div class="modal-body">
                    <p>Please enter the student id for drop out?</p>
                    <div class="" id="StudentIds">
                    </div>
                    <input type="submit" name="DropOutStudent" value="Drop Out Student" class="btn bg-purple pull-left" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <hr />
                </div>
            }

        </div>

    </div>
</div>

<!-- Batch Transfer Modal -->
<div id="BatchTransferModal" class="modal fade " role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Batch Transfer</h4>
            </div>
            @using (Html.BeginForm("BatchTransferStudent", "RecoveryOfficer", FormMethod.Post))
            {
                <div class="modal-body">
                    <p>Please enter the student id for batch transfer?</p>
                    <div class="" id="StudentIdsBT">
                    </div>

                    <input type="submit" name="BatchTransferStudent" value="Batch Transfer Student" class="btn bg-purple pull-left" />

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <hr />
                </div>
            }

        </div>

    </div>
</div>


@if (ViewBag.Message != null)
{
    if (ViewBag.Message == 1)
    {
        <script type="text/javascript">
            var ts = '@(ViewBag.TS)';
            var tp = '@(ViewBag.TP)';
            var ta = '@(ViewBag.TA)';
            $("#modalDefault").modal({
                backdrop: false
            });
            $(".modal-header").css("background-color", "#0aae63");
            var batch = $('div.row div h3').text();
            $("#message").html("<img src=\"/images/happy.png\"/><h3>Attendance successfully marked </h3>" +
                "<h5>Summary:</h5>" +
                "<ul><li>Total Students : " + ts + "</li><li>Total Present : " + tp + "</li><li>Total Absent : " + ta + "</li></ul>"
                );

            $('#CloseModal').click(function () {
                window.location.href = "/RecoveryOfficer/Task?task=attendance"
            });

        </script>
    }
    else if (ViewBag.Message == -1)
    {
        <script type="text/javascript">
            $("#modalDefault").modal({
                backdrop: false
            });
            $(".modal-header").css("background-color", "#0aae63");
            var batch = $('div.row div h3').text();
            $("#message").html("<img src=\"/images/sad.png\"/> <h3>Attendance can't mark again for same batch.</h3>");

            $('#CloseModal').click(function () {
                window.location.href = "/RecoveryOfficer/Task?task=attendance"
            });
        </script>
    }
}

<script>
    //get value from query string
    function GetParameterValues(param) {
        var url = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < url.length; i++) {
            var urlparam = url[i].split('=');
            if (urlparam[0] === param) {
                return urlparam[1];
            }
        }
    }

    $(document).ready(function () {



        $('#DropOutButton').on('click', function () {
            $("#StudentIds").empty();
            $.ajax({
                type: "get",
                url: "/RecoveryOfficer/StudentIdList",
                data: { batch: GetParameterValues('batch') },
                datatype: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var list = eval(data);
                    var count = 1;
                    $.each(list, function (i, item) {
                        $("#StudentIds").append(
                            "<div class='row'>" +
                                "<div class='col-sm-offset-1 col-sm-5'>" +
                                    "<div class='checkbox'>" +
                                        "<label> <input type='checkbox' name='studentId[" + i + "]' value='" + item.StudentId + "'>" + item.StudentId + "  " + item.StudentName + "</label>" +
                                     "</div>" +
                                 "</div>" +
                                 "<div class='col-sm-5'>" +
                                    "<textarea class='form-control' cols='20'  name='notes[" + i + "]' rows='2' style='resize: none;'></textarea>" +
                                 "</div>" +
                             "</div> <hr/>");
                        count++;
                    });
                }
            })
        });

        $('#BatchTransferButton').on('click', function () {
            $("#StudentIdsBT").empty();
            $.ajax({
                type: "get",
                url: "/RecoveryOfficer/StudentIdBatchList",
                data: { batch: GetParameterValues('batch') },
                datatype: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var list = eval(data);
                    var count = 1;
                    $.each(list, function (i, item) {
                        $("#StudentIdsBT").append(
                            '<div class="row">' +
                                '<div class="col-sm-3">' +
                                    '<div class="checkbox">' +
                                        '<label>' +
                                            '<input type="checkbox" name="studentId[' + i + ']" value="' + item.StudentId + '">' +
                                            item.StudentId + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" + item.StudentName +
                                        '</label>' +
                                    '</div>' +
                                '</div>' +
                                '<div class="col-sm-3">Student Current Batch : <br/>' +
                                    '<input type="text" name="batchf[' + i + ']" value="' + item.BatchCode + '" class="form-control">' +
                                '</div>' +
                                '<div class="col-sm-3">Transfer Batch : <br/>' +
                                '<select class="btcombo form-control"></select>' +
                                '<input type="hidden" name="batcht[' + i + ']" value="batcht[' + i + ']"/>' +
                                '</div>' +
                                '<div class="col-sm-3">' +
                                    '<textarea class="form-control" name="notes[' + i + ']" rows="2" style="resize: none;"></textarea>' +
                                '</div>' +
                            '</div>' +
                            '<hr />');
                        count++;
                    });
                }
            });

            BatchComboFunction();

            $('.btcombo').selectpicker({
                liveSearch: true,
            });
        });

        function BatchComboFunction() {
            $.ajax({
                type: "get",
                url: "/RecoveryOfficer/BatchCodeList",
                datatype: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    var listt = eval(data);
                    $.each(listt, function (ii, itemm) {
                        $('.btcombo').append('<option value="' + itemm.BatchCode + '">' + itemm.BatchCode + '</option>');
                    });
                }
            })
        }

        $('.btcombo').on('change', function () {
            var x = $('.btcombo').val();
            console.log(x);
        });


    });


</script>
