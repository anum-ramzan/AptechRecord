@model IEnumerable<AptechRecord.Models.Cours>

@{
    ViewBag.Title = "Courses List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section contentHeader{
    <h1>
        Courses
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Courses</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <p>
                    @Html.ActionLink("Add New Course", "AddCourse", null, new { @class="btn btn-danger" })
                </p>
                <table id="CoursesTable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CourseName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CourseAbbreviation)
                            </th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseAbbreviation)
                                </td>
                                <td>
                                    <a href=@Url.Action("EditCourse", new { id = item.Id })><i class="fa fa-edit"></i></a>
                                    @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

