@model IEnumerable<AptechRecord.Models.usp_select_faculty_wise_Result>

@{
    ViewBag.Title = "Faculty Wise Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentHeader{
    <h1>
        Attendance
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Attendances")><i class="fa fa-list"></i>Attendance</a></li>
        <li>Faculty Wise Attendance</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Faculty Wise Attendance for @ViewBag.Days</h3>
            </div>
            <div class="box-body">
                <table id="FacultyWisetable" class="table">
                    <thead>
                        <tr>
                            
                            <th>
                                Faculty Name
                            </th>
                            <th>
                                Head Count
                            </th>
                            <th>
                               Attendance %
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Head_Count)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Attendance)%
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th style="font-weight: 700;">Grand Total</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.dataTables_empty').html('<b>Waiting for attendance (Attendance have not uploaded yet) .............</b>')
    });
</script>