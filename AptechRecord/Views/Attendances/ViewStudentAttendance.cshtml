@model IEnumerable<AptechRecord.Models.usp_select_student_wise_attendance_detail_Result>

@{
    ViewBag.Title = "View Student Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentHeader{
    <h1>
        Attendance
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "Attendances")><i class="fa fa-list"></i>Attendance</a></li>
        <li><a href=@Url.Action("StudentWiseAttendance", "Attendances")><i class="fa fa-list"></i>Student Attendance</a></li>
        <li>Student Attendance Details</li>
    </ol>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Student Attendance Details</h3>
            </div>
            <div class="box-body">
                <p>
                    StudentId : <b>@ViewBag.StudentId</b>
                    <br />
                    Student Name : <b>@ViewBag.StudentName</b>
                    <br/>
                    BatchCode : <b>@ViewBag.BatchCode</b>
                </p>
                <br />
                <table id="StudentWiseAttendanceDetailtable" class="table">
                    <thead>
                        <tr>
                            <th>
                                Attendance Date
                            </th>
                            <th>
                                Attendance Status
                            </th>
                            <th>
                                Notes
                            </th>
                            <th>
                                Attendance Mark By
                            </th>
                            <th>
                                Attendance Mark At
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AttendanceDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AttenddanceStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AttendanceMarkAt)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

