@model AptechRecord.Models.CourseDetail

@{
    ViewBag.Title = "Add Course Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentHeader{
    <h1>
        Course Detail
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li><a href=@Url.Action("Index", "CourseDetails")><i class="fa fa-list"></i>Course detail</a></li>
        <li>Add new course detail</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("AddCourseDetails", "CourseDetails", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.CourseDetailTree, "CourseDetailTree", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("CourseDetailTree", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CourseDetailTree, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CourseDetailName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CourseDetailName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CourseDetailName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Add Course Details" class="btn btn-default" />
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
