@model IEnumerable<AptechRecord.Models.SlotAssign>

@{
    ViewBag.Title = "Recovery Officer Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section contentHeader{
    <h1>
        Task List
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href=@Url.Action("Dashboard", "Admin")><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>Recovery Officer Task List</li>
    </ol>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <p>
                    @Html.ActionLink("Assign task", "Create", null, new { @class = "btn btn-danger" })
                </p>
                <table id="Tasktable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AssignDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TaskStatus)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Day.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeSlot.Slot)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Username)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AssignDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TaskStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Day.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeSlot.Slot)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Username)
                                </td>
                                <td>
                                    <a href=@Url.Action("Edit", new { id = item.Id })><i class="fa fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
